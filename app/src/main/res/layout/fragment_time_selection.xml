<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DropDownsFragment">

    <TextView
        android:id="@+id/id_text_view_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Subject"
        android:textColor="@color/white"
        android:textSize="@dimen/titleSize"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/id_text_view_help_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Set an amount of time for the game completion!"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/helpTextSize"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_subject"></TextView>


    <TextView
        android:id="@+id/id_text_view_up_arrow_min1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle"
        app:layout_constraintBottom_toBottomOf="@+id/id_text_view_min1"
        app:layout_constraintEnd_toEndOf="@+id/id_text_view_min1"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="@+id/id_text_view_min1"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_help_text"></TextView>

    <TextView
        android:id="@+id/id_text_view_min1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounded_button"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/hugeText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_help_text"
        app:layout_constraintVertical_bias="0.391"></TextView>

    <TextView
        android:id="@+id/id_text_view_down_arrow_min1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_text_view_min1"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/id_text_view_min1"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_min1"
        app:layout_constraintVertical_bias="0.027"></TextView>


    <TextView
        android:id="@+id/id_text_view_up_arrow_min2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle"
        app:layout_constraintBottom_toBottomOf="@+id/id_text_view_min2"
        app:layout_constraintEnd_toEndOf="@+id/id_text_view_min2"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="@+id/id_text_view_min2"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_help_text"></TextView>

    <TextView
        android:id="@+id/id_text_view_min2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_button"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="@dimen/hugeText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/id_text_view_min1"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_help_text"
        app:layout_constraintVertical_bias="0.391"></TextView>

    <TextView
        android:id="@+id/id_text_view_down_arrow_min2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_text_view_min2"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/id_text_view_min2"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_min2"
        app:layout_constraintVertical_bias="0.027"></TextView>


    <TextView
        android:id="@+id/id_circle_clock2"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/id_text_view_min2"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/id_circle_clock1"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_text_view_min2"
        app:layout_constraintTop_toBottomOf="@+id/id_circle_clock2"
        app:layout_constraintVertical_bias="0.032"></TextView>

    <TextView
        android:id="@+id/id_text_view_up_arrow_sec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle"
        app:layout_constraintBottom_toBottomOf="@+id/id_text_view_sec1"
        app:layout_constraintEnd_toEndOf="@+id/id_text_view_sec1"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/id_text_view_sec1"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_help_text"></TextView>

    <TextView
        android:id="@+id/id_text_view_sec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounded_button"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/hugeText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/id_circle_clock2"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_help_text"
        app:layout_constraintVertical_bias="0.391"></TextView>

    <TextView
        android:id="@+id/id_text_view_down_arrow_sec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_text_view_sec1"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/id_text_view_sec1"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_sec1"
        app:layout_constraintVertical_bias="0.027"></TextView>


    <TextView
        android:id="@+id/id_text_view_up_arrow_sec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle"
        app:layout_constraintBottom_toBottomOf="@+id/id_text_view_sec2"
        app:layout_constraintEnd_toEndOf="@+id/id_text_view_sec2"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="@+id/id_text_view_sec2"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_help_text"></TextView>

    <TextView
        android:id="@+id/id_text_view_sec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_button"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/hugeText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/id_text_view_sec1"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_help_text"
        app:layout_constraintVertical_bias="0.391"></TextView>

    <TextView
        android:id="@+id/id_text_view_down_arrow_sec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/triangle"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_text_view_sec2"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/id_text_view_sec2"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_sec2"
        app:layout_constraintVertical_bias="0.027"></TextView>

    <TextView
        android:id="@+id/id_text_view_next_time_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/green"
        android:text="Next"
        android:textSize="@dimen/subtitleSize"
        android:textColor="@color/white"
        android:paddingLeft="60dp"
        android:layout_marginTop="80dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_min1"></TextView>



</androidx.constraintlayout.widget.ConstraintLayout>