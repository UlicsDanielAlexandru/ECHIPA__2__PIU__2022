<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/id_image_view_user_item"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:src="@drawable/user_item_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/id_image_view_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/id_image_view_user_item"
        app:layout_constraintBottom_toBottomOf="@id/id_image_view_user_item"
        app:layout_constraintStart_toStartOf="@id/id_image_view_user_item"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/id_text_view_user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/id_image_view_user_item"
        app:layout_constraintBottom_toBottomOf="@id/id_image_view_user_item"
        app:layout_constraintStart_toEndOf="@id/id_image_view_user_image"
        android:textColor="@color/text_grey"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/id_image_view_user_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/id_image_view_user_item"
        app:layout_constraintBottom_toBottomOf="@id/id_image_view_user_item"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toStartOf="@id/id_image_view_add"
        android:layout_marginRight="30dp"/>
    <ImageView
        android:id="@+id/id_image_view_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/id_image_view_user_item"
        app:layout_constraintBottom_toBottomOf="@id/id_image_view_user_item"
        android:background="@drawable/user_plus_icon"
        app:layout_constraintEnd_toEndOf="@id/id_image_view_user_item"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/text_grey"/>
    <ImageView
        android:id="@+id/id_image_view_xmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/id_image_view_add"
        app:layout_constraintBottom_toBottomOf="@id/id_image_view_add"
        app:layout_constraintStart_toStartOf="@id/id_image_view_add"
        app:layout_constraintEnd_toEndOf="@id/id_image_view_add"
        android:background="@drawable/xmark_icon"
        android:backgroundTint="@color/red"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/id_image_view_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/check_icon"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>