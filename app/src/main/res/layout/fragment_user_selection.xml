<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_black">
    <TextView
        android:id="@+id/id_text_view_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Distributed systems"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/subTitleSize"
        android:layout_marginLeft="10dp"
        />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/id_group_collaborative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="id_text_view_nr_people, id_text_view_people,
        id_text_view_suggestion_collaborative, id_text_view_action_collaborative"
        android:visibility="invisible"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/id_group_experimented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="id_text_view_suggestion_experimented,
        id_text_view_action_experimented"
        />
    <TextView
        android:id="@+id/id_text_view_action_collaborative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_subject"
        android:text="Learn with your friends!"
        android:textColor="@color/text_blue"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/actionSubtitleSize"
        android:textStyle="bold"
        android:layout_marginTop="5px"
        />
    <TextView
        android:id="@+id/id_text_view_suggestion_collaborative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_action_experimented"
        android:text="Invite all your friends for this group meeting!"
        android:textColor="@color/text_grey"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/id_text_view_action_experimented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_subject"
        android:text="Learn with an experimented user!"
        android:textColor="@color/text_blue"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/actionSubtitleSize"
        android:textStyle="bold"
        android:layout_marginTop="5px"
        />
    <TextView
        android:id="@+id/id_text_view_suggestion_experimented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_action_experimented"
        android:text="Select an available user!"
        android:textColor="@color/text_grey"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/id_text_view_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People invited: "
        android:textColor="@color/yellow"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_suggestion_experimented"
        app:layout_constraintStart_toStartOf="@id/id_text_view_suggestion_experimented"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/id_text_view_nr_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toEndOf="@id/id_text_view_people"
        app:layout_constraintTop_toTopOf="@id/id_text_view_people"
        app:layout_constraintBottom_toBottomOf="@id/id_text_view_people"
        android:textSize="20sp"
        android:text="0"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/id_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/id_text_view_people"
        android:visibility="invisible"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recycle_view_users"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_people"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>