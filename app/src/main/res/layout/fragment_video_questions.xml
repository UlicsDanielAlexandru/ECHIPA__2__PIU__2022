<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:id="@+id/id_constraint_layout_drag_and_drop"
    >
    <TextView
        android:id="@+id/id_text_view_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Distributed systems"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/subTitleSizeSmaller"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/id_image_view_clock"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/clock_icon"
        app:layout_constraintEnd_toStartOf="@id/id_text_view_clock"
        app:layout_constraintTop_toTopOf="@id/id_text_view_clock"
        app:layout_constraintBottom_toBottomOf="@id/id_text_view_clock"
        />
    <TextView
        android:id="@+id/id_text_view_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/id_text_view_subject"
        android:text="10:00"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="@dimen/subTitleSizeSmaller"
        android:layout_marginRight="10dp"
        />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/id_group_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="id_text_view_question_1,
        id_text_view_question_2, id_text_view_question_3,
        id_button_true_1, id_button_true_2, id_button_true_3,
        id_button_false_1, id_button_false_2, id_button_false_3"
        />
    <TextView
        android:id="@+id/id_text_view_question_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/question_shape"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_clock"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:paddingVertical="10dp"/>
    <Button
        android:id="@+id/id_button_true_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRUE"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_question_1"
        app:layout_constraintStart_toStartOf="@id/id_text_view_question_1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/id_button_false_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FALSE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="@id/id_text_view_question_1"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_question_1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"/>
    <TextView
        android:id="@+id/id_text_view_question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/question_shape"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_button_true_1"
        android:layout_marginTop="40dp"
        android:paddingLeft="5dp"
        android:paddingVertical="10dp"/>
    <Button
        android:id="@+id/id_button_true_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRUE"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_question_2"
        app:layout_constraintStart_toStartOf="@id/id_text_view_question_2"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/id_button_false_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FALSE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="@id/id_text_view_question_2"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_question_2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"/>
    <TextView
        android:id="@+id/id_text_view_question_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/question_shape"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_button_true_2"
        android:layout_marginTop="40dp"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>
    <Button
        android:id="@+id/id_button_true_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRUE"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_question_3"
        app:layout_constraintStart_toStartOf="@id/id_text_view_question_3"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/id_button_false_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FALSE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="@id/id_text_view_question_3"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_question_3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"/>
    <ImageView
        android:id="@+id/id_image_view_xmark_true_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/id_button_true_1"
        app:layout_constraintTop_toTopOf="@id/id_button_true_1"
        app:layout_constraintBottom_toBottomOf="@id/id_button_true_1"
        android:layout_marginBottom="30dp"
        android:background="@drawable/xmark_icon"
        android:backgroundTint="@color/red"
        android:elevation="2dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/id_image_view_xmark_false_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/id_button_false_1"
        app:layout_constraintTop_toTopOf="@id/id_button_false_1"
        app:layout_constraintBottom_toBottomOf="@id/id_button_false_1"
        android:layout_marginBottom="30dp"
        android:background="@drawable/xmark_icon"
        android:backgroundTint="@color/red"
        android:elevation="2dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/id_image_view_xmark_true_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/id_button_true_2"
        app:layout_constraintTop_toTopOf="@id/id_button_true_2"
        app:layout_constraintBottom_toBottomOf="@id/id_button_true_2"
        android:layout_marginBottom="30dp"
        android:background="@drawable/xmark_icon"
        android:backgroundTint="@color/red"
        android:elevation="2dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/id_image_view_xmark_false_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/id_button_false_2"
        app:layout_constraintTop_toTopOf="@id/id_button_false_2"
        app:layout_constraintBottom_toBottomOf="@id/id_button_false_2"
        android:layout_marginBottom="30dp"
        android:background="@drawable/xmark_icon"
        android:backgroundTint="@color/red"
        android:elevation="2dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/id_image_view_xmark_true_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/id_button_true_3"
        app:layout_constraintTop_toTopOf="@id/id_button_true_3"
        app:layout_constraintBottom_toBottomOf="@id/id_button_true_3"
        android:layout_marginBottom="30dp"
        android:background="@drawable/xmark_icon"
        android:backgroundTint="@color/red"
        android:elevation="2dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/id_image_view_xmark_false_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/id_button_false_3"
        app:layout_constraintTop_toTopOf="@id/id_button_false_3"
        app:layout_constraintBottom_toBottomOf="@id/id_button_false_3"
        android:layout_marginBottom="30dp"
        android:background="@drawable/xmark_icon"
        android:backgroundTint="@color/red"
        android:elevation="2dp"
        android:visibility="invisible"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/id_group_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="id_image_view_confirmation,
    id_text_view_confirmation, id_button_confirmation_yes,
    id_button_confirmation_no"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/id_image_view_confirmation"
        android:layout_width="0dp"
        android:layout_height="310dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/question_shape"
        android:backgroundTint="@color/red"
        app:layout_constraintWidth_percent="0.90"/>
    <TextView
        android:id="@+id/id_text_view_confirmation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/id_image_view_confirmation"
        app:layout_constraintStart_toStartOf="@id/id_image_view_confirmation"
        app:layout_constraintEnd_toEndOf="@id/id_image_view_confirmation"
        android:text="Are you sure you want to exit?"
        android:layout_marginTop="55dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/id_button_confirmation_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="@id/id_image_view_confirmation"
        app:layout_constraintBottom_toBottomOf="@id/id_image_view_confirmation"/>
    <Button
        android:id="@+id/id_button_confirmation_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="@id/id_image_view_confirmation"
        app:layout_constraintBottom_toBottomOf="@id/id_image_view_confirmation"
        />
    <Button
        android:id="@+id/id_button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textColor="@color/black"
        android:backgroundTint="@color/submit_button_teal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_button_true_3"
        android:textStyle="bold"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/id_button_view_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW RESULTS"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        app:layout_constraintStart_toStartOf="@id/id_button_submit"
        app:layout_constraintEnd_toEndOf="@id/id_button_submit"
        app:layout_constraintTop_toTopOf="@id/id_button_submit"
        app:layout_constraintBottom_toBottomOf="@id/id_button_submit"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>