<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:id="@+id/id_constraint_layout_drag_and_drop"
    >
    <TextView
        android:id="@+id/id_text_view_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Distributed systems"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/subTitleSizeSmaller"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/clock_icon"
        app:layout_constraintEnd_toStartOf="@id/id_text_view_clock"
        app:layout_constraintTop_toTopOf="@id/id_text_view_clock"
        app:layout_constraintBottom_toBottomOf="@id/id_text_view_clock"
        />
    <TextView
        android:id="@+id/id_text_view_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/id_text_view_subject"
        android:text="10:00"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:textSize="@dimen/subTitleSizeSmaller"
        android:layout_marginRight="10dp"
        />
    <ImageView
        android:id="@+id/id_card_view_one_user"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@id/id_text_view_subject"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/question_shape_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        />
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/id_flow"
        android:layout_margin="40dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="10dp"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="8dp"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="@+id/id_card_view_one_user"
        app:layout_constraintStart_toStartOf="@+id/id_card_view_one_user"
        app:layout_constraintTop_toTopOf="@+id/id_card_view_one_user"
        app:layout_constraintBottom_toBottomOf="@+id/id_card_view_one_user"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/submit_button_teal"
        app:layout_constraintTop_toBottomOf="@+id/id_card_view_one_user"
        android:layout_marginTop="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>